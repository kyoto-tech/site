---
import { marked } from 'marked';

type Item = {
	title: string;
	description: string;
};

type Props = {
	items: Item[];
};

const renderMarkdown = (value: string) => (marked.parse(value, { async: false }) as string).trim();

const { items } = Astro.props as Props;
---

<div class="mt-8 grid gap-6 md:grid-cols-3">
	{items.map((item) => (
		<article class="rounded-2xl bg-white/90 p-6 shadow-xl shadow-stone-900/5 ring-1 ring-white/60">
			<h3 class="text-lg font-semibold text-slate-900">{item.title}</h3>
			<div
				class="mt-3 text-base leading-relaxed text-slate-600 [&>p]:mb-3 [&>p:last-child]:mb-0"
				set:html={renderMarkdown(item.description)}
			></div>
		</article>
	))}
</div>
